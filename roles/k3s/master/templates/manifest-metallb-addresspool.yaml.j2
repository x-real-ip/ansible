---
apiVersion: metallb.io/v1beta1
kind: L2Advertisement
metadata:
  name: l2-ipaddresspool
  namespace: metallb-system
spec:
  ipAddressPools:
    - prd-ext-lan-ips
    - prd-int-lan-ips

---
apiVersion: metallb.io/v1beta1
kind: IPAddressPool
metadata:
  name: prd-int-lan-ips
  namespace: metallb-system
spec:
  addresses:
    - {{ metallb_int_lan_ip }}

---
apiVersion: metallb.io/v1beta1
kind: IPAddressPool
metadata:
  name: prd-ext-lan-ips
  namespace: metallb-system
spec:
  addresses:
    - {{ metallb_ext_lan_ip }}
