---
apiVersion: metallb.io/v1beta1
kind: L2Advertisement
metadata:
  name: l2-ipaddresspool
  namespace: {{ metallb_namespace }}

---
apiVersion: metallb.io/v1beta1
kind: IPAddressPool
metadata:
  name: prd-int-lan-ips
  namespace: {{ metallb_namespace }}
spec:
  addresses:
    - {{ metallb_int_lan_ip }}
    - {{ metallb_plex_lan_ip }}

---
apiVersion: metallb.io/v1beta1
kind: IPAddressPool
metadata:
  name: prd-ext-lan-ips
  namespace: {{ metallb_namespace }}
spec:
  addresses:
    - {{ metallb_ext_lan_ip }}
