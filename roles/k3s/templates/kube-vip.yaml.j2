---
kind: ServiceAccount
apiVersion: v1
metadata:
  name: {{ kube_vip.name }}
  namespace: {{ kube_vip.namespace }}

---
kind: ClusterRole
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  annotations:
    rbac.authorization.kubernetes.io/autoupdate: "true"
  name: system:{{ kube_vip.name }}-role
rules:
  - apiGroups: [""]
    resources: ["services", "services/status", "nodes", "endpoints"]
    verbs: ["list","get","watch", "update"]
  - apiGroups: ["coordination.k8s.io"]
    resources: ["leases"]
    verbs: ["list", "get", "watch", "update", "create"]

---
kind: ClusterRoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: system:{{ kube_vip.name }}-binding
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: system:{{ kube_vip.name }}-role
subjects:
- kind: ServiceAccount
  name: {{ kube_vip.name }}
  namespace: {{ kube_vip.namespace }}

---
apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: {{ kube_vip.name }}-ds
  namespace: {{ kube_vip.namespace }}
spec:
  selector:
    matchLabels:
      name: {{ kube_vip.name }}-ds
  template:
    metadata:
      labels:
        name: {{ kube_vip.name }}-ds
    spec:
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: node-role.kubernetes.io/master
                operator: Exists
            - matchExpressions:
              - key: node-role.kubernetes.io/control-plane
                operator: Exists
      containers:
      - args:
        - manager
        env:
        - name: vip_arp
          value: "true"
        - name: port
          value: "6443"
        - name: vip_interface
          value: {{ kube_vip.flannel_iface }}
        - name: vip_cidr
          value: "{{ kube_vip.apiserver_endpoint }}"
        - name: cp_enable
          value: "true"
        - name: cp_namespace
          value: {{ kube_vip.namespace }}
        - name: vip_ddns
          value: "false"
        - name: svc_enable
          value: "false"
        - name: vip_leaderelection
          value: "true"
        - name: vip_leaseduration
          value: "15"
        - name: vip_renewdeadline
          value: "10"
        - name: vip_retryperiod
          value: "2"
        - name: address
          value: {{ kube_vip.apiserver_endpoint }}
        image: ghcr.io/kube-vip/kube-vip:{{ kube_vip.image_tag }}
        imagePullPolicy: Always
        name: {{ kube_vip.name }}
        resources: {}
        securityContext:
          capabilities:
            add:
            - NET_ADMIN
            - NET_RAW
            - SYS_TIME
      hostNetwork: true
      serviceAccountName: {{ kube_vip.name }}
      tolerations:
      - effect: NoSchedule
        operator: Exists
      - effect: NoExecute
        operator: Exists
  updateStrategy: {}
status:
  currentNumberScheduled: 0
  desiredNumberScheduled: 0
  numberMisscheduled: 0
  numberReady: 0
